<Page x:Class="ORACLE_POE.CyberQuiz"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CyberQuiz" Background="#FF0F1923">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Back Button -->
        <Border Grid.Row="0" Background="#FF0A121A" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Back Button -->
                <Button x:Name="BackButton"
                        Grid.Column="0"
                        Content="← Back"
                        Width="80"
                        Margin="0,0,10,0"
                        Background="Transparent"
                        Foreground="#FF00C8FF"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Click="BackButton_Click"
                        HorizontalAlignment="Left"/>

                <!-- Quiz Title -->
                <TextBlock Grid.Column="1"
                           Text="Cybersecurity Quiz" 
                           Foreground="#FF00C8FF" 
                           FontSize="20"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Quiz Content Area -->
        <ScrollViewer Grid.Row="1" Padding="20">
            <StackPanel>
                <!-- Question -->
                <TextBlock x:Name="QuestionText" 
                           Text="Loading question..." 
                           Foreground="White" 
                           FontSize="16"
                           TextWrapping="Wrap"
                           Margin="0,0,0,20"/>

                <!-- Options -->
                <StackPanel x:Name="OptionsPanel" Margin="20,0,0,20">
                    <!-- Options will be added programmatically -->
                </StackPanel>

                <!-- Feedback -->
                <Border x:Name="FeedbackBorder" 
                        Background="#FF1A2A3A" 
                        CornerRadius="5" 
                        Padding="10"
                        Visibility="Collapsed">
                    <StackPanel>
                        <TextBlock x:Name="FeedbackText" 
                                   Foreground="White" 
                                   TextWrapping="Wrap"/>
                        <TextBlock x:Name="ExplanationText" 
                                   Foreground="#FF00C8FF" 
                                   Margin="0,10,0,0"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#FF0A121A" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="ProgressText" 
                           Text="Question 1 of 20" 
                           Foreground="#FF00C8FF"
                           VerticalAlignment="Center"/>

                <Button x:Name="NextButton" 
                        Grid.Column="1" 
                        Content="Next Question" 
                        Width="120"
                        Background="#FF00C8FF"
                        Foreground="Black"
                        FontWeight="Bold"
                        Click="NextButton_Click"
                        IsEnabled="False"/>
            </Grid>
        </Border>
    </Grid>
</Page>